    "version": "0.2.0",
    "configurations": [
        {
            "name": "Production",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": ["smartplug_energy_controller.app:app", "--reload", "--dotenv_path", "${workspaceFolder}/.env", "-vv"],
            "justMyCode": false
        },
        {
            "name": "Debug",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/smartplug_energy_controller/app.py",
            "console": "integratedTerminal",
            "args": ["--dotenv_path", "${workspaceFolder}/.env", "-vv"],
            "justMyCode": false
        }
    ]
}